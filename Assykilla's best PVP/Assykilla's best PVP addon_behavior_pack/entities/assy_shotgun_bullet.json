{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "assy:shotgun_bullet",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },
    "components": {
      "minecraft:collision_box": {
        "width": 0.55,
        "height": 0.55
      },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "damage": 20,
            "knockback": true,
            "semi_random_diff_damage": false,
            "destroy_on_hit": true
          },
          "mob_effect": {
            "effect": "slowness",
            "durationeasy": 200,
            "durationnormal": 200,
            "durationhard": 200,
            "amplifier": 1
          },
          "stick_in_ground": {
            "shake_time": 0.35
          },
          "arrow_effect": {},
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "on:hit",
              "target": "self"
            }
          }
        },
        "hit_sound": "bow.hit",
        "power": 3,
        "gravity": 0.3,
        "inertia": 1,
        "anchor": 2,
        "angle_offset": 0,
        "offset": [
          0.0,
          0.25,
          0.0
        ],
        "shoot_sound": "assy_shotgun_shot"
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 100,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      "on:hit": {
        "sequence": [
          {
            "queue_command": {
              "command": [
                "function shotgunfangs"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "exploding"
              ]
            }
          }
        ]
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "filters": {
              "test": "has_equipment",
              "subject": "other",
              "value": "assy:shotgun"
            },
            "queue_command": {
              "command": [
                "playsound assy_shotgun_shot @a ~ ~ ~ 0.8 1"
              ],
              "target": "other"
            }
          }
        ]
      }
    },
    "component_groups": {
      "exploding": {
        "minecraft:explode": {
          "fuseLength": 2,
          "power": 3,
          "fuseLit": true,
          "causesFire": false,
          "fuse_length": 2,
          "max_resistance": 3.4,
          "breaks_blocks": false,
          "causes_fire": false,
          "destroy_affected_by_griefing": false,
          "fire_affected_by_griefing": false,
          "fuse_lit": true
        }
      }
    }
  }
}