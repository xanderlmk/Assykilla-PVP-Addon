{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.assy_leather_helmet": {
      "states": {
        "default": {
          "transitions": [
            {
              "walking": "(1.0)"
            }
          ],
          "on_entry": [
            "/function assy_leather_helmet"
          ]
        },
        "walking": {
