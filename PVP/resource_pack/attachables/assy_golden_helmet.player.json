{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "assy:golden_helmet.player",
      "item": {
        "assy:golden_helmet": "query.is_owner_identifier_any('minecraft:player')"
      },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "default": "textures/entity/pamobile/assy_golden_helmet",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.assy_golden_helmet"
      },
      "scripts": {
        "parent_setup": "variable.helmet_layer_visible = 0.0;"
      },
      "render_controllers": [
        "controller.render.armor"
      ]
    }
  }
}